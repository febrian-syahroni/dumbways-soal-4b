
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Tambah Kabupaten</title>
    <link rel="stylesheet" href="/public/css/kabupaten-form.css">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="container">
    <div class="content">
      <h1>{{#if kabupaten}}Edit{{else}}Tambah{{/if}} Kabupaten</h1>
      <form action="{{#if kabupaten}}/kabupaten/{{kabupaten.id}}{{else}}/kabupaten/tambah{{/if}}" method="POST">
      <div>
        <label class="form-label" for="nama">Nama:</label>
        <input class="form-control"
          type="text"
          id="nama"
          name="nama"
          value="{{kabupaten.nama}}"
          required
        />
      </div>
      <div>
        <label class="form-label" for="provinsiId">Provinsi:</label>
        <select class="form-control" id="provinsiId" name="provinsiId" required>
        {{#each provinsis}}
          <option value="{{this.id}}" {{#if (eq ../kabupaten.provinsiId this.id)}}selected{{/if}}>
            {{this.nama}}
          </option>
        {{/each}}
        </select>
      </div>
      <div>
        <label class="form-label" for="diresmikan">Diresmikan:</label>
        <input class="form-control"
          type="date"
          id="diresmikan"
          name="diresmikan"
          value="{{formatDate kabupaten.diresmikan}}"
          required
        />
      </div>
      <div class="submit">
        <a class="btn btn-dark" href="/dashboard">Kembali</a>
        <button class="btn btn-success my-3" type="submit">Simpan</button>
      </div>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>