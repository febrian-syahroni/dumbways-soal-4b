<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Provinsi</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="container">
    <h1>Daftar Provinsi</h1>
    <a class="btn btn-success" href="/provinsi/tambah">Tambah Provinsi</a>
    <table class="table">
      <thead>
        <tr>
          <th>Nama</th>
          <th>Diresmikan</th>
          <th>Pulau</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        {{#each provinsis}}
          <tr>
            <td>{{nama}}</td>
            <td>{{formatDate diresmikan}}</td>
            <td>{{pulau}}</td>
            <td>
              <a class="btn btn-warning" href="/provinsi/{{id}}">Edit</a>
              <a
                class="btn btn-danger"
                href="/provinsi/{{id}}/hapus"
                onclick="return confirm('Apakah Anda yakin ingin menghapus provinsi ini?')"
              >Hapus</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <a class="btn btn-dark" href="/dashboard">Kembali</a>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>