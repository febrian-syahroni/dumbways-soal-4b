<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tambah Provinsi</title>
    <link rel="stylesheet" href="/public/css/provinsi-form.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="container">
    <div class="content">
      <h1>{{#if provinsi}}Edit{{else}}Tambah{{/if}} Provinsi</h1>
      <form action="{{#if provinsi}}/provinsi/{{provinsi.id}}{{else}}/provinsi/tambah{{/if}}" method="POST">
        <div>
          <label class="form-label" for="nama">Nama:</label>
          <input class="form-control" type="text" id="nama" name="nama" value="{{provinsi.nama}}" required>
        </div>
        <div>
          <label class="form-label" for="diresmikan">Diresmikan:</label>
          <input class="form-control" type="date" id="diresmikan" name="diresmikan" value="{{provinsi.diresmikan}}" required>
        </div>
        <div>
          <label class="form-label" for="pulau">Pulau:</label>
          <input class="form-control" type="text" id="pulau" name="pulau" value="{{provinsi.pulau}}" required>
        </div>
        <div class="submit">
          <a class="btn btn-dark" href="/dashboard">Kembali</a>
          <button button class="btn btn-warning my-3" type="submit">Simpan</button>
        </div>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>